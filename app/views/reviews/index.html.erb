<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>User</th>
      <th>Item</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.user.present? %>
            <%= review.user.name %>
          <% end %>
        </td>
        <td><%= review.message %></td>
        <td>
          <% if review.reviewable.is_a?(User).present? %>
            <% if review.reviewable.present? %>
              <%= review.reviewable.name %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if review.reviewable.is_a?(Item).present? %>
            <% if review.reviewable.present? %>
              <%= review.reviewable.name %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

