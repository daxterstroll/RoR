<h1>Advanced Search</h1>

<%= form_for @search, html:  {class: "pure-form"} do |s| %>

  <div class="field">
    <%= s.label :keywords %><br>
    <%= s.text_field :keywords %>
  </div>

  <div class="field">
    <%= s.label :category_id %><br>
    <%= s.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= s.label :filters_value_id %><br>
    <%= s.collection_select :filters_value_id, FiltersValue.order(:option), :id, :option, include_blank: true %>
  </div>

  <div class="actions"><%= s.submit "Search", class: "pure_button pure_button_primary" %></div>

<% end %>

<p><%= link_to 'Back', items_path %></p>